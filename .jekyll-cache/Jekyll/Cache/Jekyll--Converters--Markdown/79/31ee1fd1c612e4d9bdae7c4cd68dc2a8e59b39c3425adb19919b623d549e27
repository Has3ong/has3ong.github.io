<span class="mi">2020</span><span class="o">-</span><span class="mi">02</span><span class="o">-</span><span class="mi">08</span><span class="nx">T02</span><span class="p">:</span><span class="mi">35</span><span class="p">:</span><span class="mf">09.859</span><span class="o">+</span><span class="mi">0000</span> <span class="p">[</span><span class="nx">initandlisten</span><span class="p">]</span> <span class="nx">git</span> <span class="nx">version</span><span class="p">:</span> <span class="nx">nogitversion</span>
